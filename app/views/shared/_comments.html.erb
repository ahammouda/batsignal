<% if commentable.comments.empty? %>
  Add a comment
<% else %>
  <% for comment in commentable.comments %>
    <%= comment.body %>
  <% end %>
<% end %>

<%= simple_form_for [current_user, commentable, Comment.new()], :url => "user_#{commentable}_" do |f| %>
  <%= f.input :body %>
  <%= f.submit "Add Comment" %>
<% end %>
